
<div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
 <div class="panel panel-info">
   <div class="panel-heading">
   <div class="panel-title">Sign Up</div>
   <div style="float:right; font-size: 85%; position: relative; top:-10px"><%= render "devise/shared/links" %>
</div>
   </div>  
  <div class="panel-body" >

<%= form_for(resource, {as: resource_name, url: registration_path(resource_name), :class => "form-horizontal"}) do |f| %>
  

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, {autofocus: true,:class => "form-control col-md-9"} %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.select :age,options_for_select(1..100), {autofocus: true,:class => "form-control col-md-2"} %>
  </div>

  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, options_for_select(['Male','Female']),{autofocus: true,:class => "form-control col-md-9"} %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, {autofocus: true,:class => "form-control col-md-9"} %>
  </div>

  <div class="field">
    <%= f.label :role_id %><br />
    <%= f.collection_select :role_id, Role.all, :id, :name ,{autofocus: true,:class => "form-control col-md-9"} %>
  </div><br />

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password,{autocomplete: "off",:class => "form-control col-md-9"} %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, {autocomplete: "off",:class => "form-control col-md-9"} %>
  </div>
<br />
<br />
  <div class="actions">
    <%= f.submit "Sign up", {:class => "btn btn-info"} %>
  </div>
<% end %>
</div>
</div>
</div>





